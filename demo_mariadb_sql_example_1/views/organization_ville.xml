<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="organization_ville_view_form" model="ir.ui.view">
        <field name="name">organization_ville_form</field>
        <field name="model">organization.ville</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="nom" />
                    </group>
                    <group>
                        <field name="code" />
                    </group>
                    <group>
                        <field name="region" />
                    </group>
                    <group>
                        <field name="arrondissement" />
                    </group>
                    <group>
                        <field name="membre" />
                    </group>
                    <group>
                        <field name="organization" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="organization_ville_view_graph" model="ir.ui.view">
        <field name="name">organization_ville_graph</field>
        <field name="model">organization.ville</field>
        <field name="arch" type="xml">
            <graph string="Organization ville">
                <field name="nom" type="row" />
                <field name="code" type="measure" />
                <field name="region" type="row" />
            </graph>
        </field>
    </record>

    <record id="organization_ville_view_kanban" model="ir.ui.view">
        <field name="name">organization_ville_kanban</field>
        <field name="model">organization.ville</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="nom" />
                <field name="code" />
                <field name="region" />
                <field name="arrondissement" />
                <field name="membre" />
                <field name="organization" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nom" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="code" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="region" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="arrondissement" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="membre" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="organization" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="organization_ville_view_pivot" model="ir.ui.view">
        <field name="name">organization_ville_pivot</field>
        <field name="model">organization.ville</field>
        <field name="arch" type="xml">
            <pivot string="Organization ville">
                <field name="nom" type="row" />
                <field name="code" type="measure" />
                <field name="region" type="row" />
            </pivot>
        </field>
    </record>

    <record id="organization_ville_view_search" model="ir.ui.view">
        <field name="name">organization_ville_search</field>
        <field name="model">organization.ville</field>
        <field name="arch" type="xml">
            <search string="Organization ville">
                <filter name="nom" string="Nom" domain="[('nom','!=',False)]" />
                <filter name="code" string="Code" domain="[('code','!=',False)]" />
                <filter name="region" string="R&#233;gion" domain="[('region','!=',False)]" />
                <filter name="arrondissement" string="Arrondissement" domain="[('arrondissement','!=',False)]" />
                <filter name="membre" string="Membre" domain="[('membre','!=',False)]" />
                <filter name="organization" string="Organization" domain="[('organization','!=',False)]" />
            </search>
        </field>
    </record>

    <record id="organization_ville_view_tree" model="ir.ui.view">
        <field name="name">organization_ville_tree</field>
        <field name="model">organization.ville</field>
        <field name="arch" type="xml">
            <tree>
                <field name="nom" />
                <field name="code" />
                <field name="region" />
                <field name="arrondissement" />
                <field name="membre" />
                <field name="organization" />
            </tree>
        </field>
    </record>

    <act_window
        id="organization_ville_ville_action_window"
        name="Ville"
        res_model="organization.ville"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
