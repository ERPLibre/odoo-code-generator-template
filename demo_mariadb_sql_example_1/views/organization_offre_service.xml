    <record id="organization_offre_service_view_search" model="ir.ui.view">
        <field name="name">organization_offre_service_search</field>
        <field name="model">organization.offre.service</field>
        <field name="arch" type="xml">
            <search string="Organization offre service">
                <filter name="description" string="Description" domain="[('description','!=',False)]" />
                <filter name="accompli" string="Accomplie" domain="[('accompli','=',True)]" />
                <filter name="Inactive" string="Inactive Organization offre service" domain="[('active','=',False)]" />
                <filter name="approuve" string="Approuv&#233;" domain="[('approuve','=',True)]" />
                <filter name="condition" string="Conditions" domain="[('condition','!=',False)]" />
                <filter name="condition_autre" string="Condition autres" domain="[('condition_autre','!=',False)]" />
                <filter name="date_affichage" string="Date d'affichage" domain="[('date_affichage','!=',False)]" />
                <filter name="date_debut" string="Date de d&#233;but" domain="[('date_debut','!=',False)]" />
                <filter name="date_fin" string="Date de fin" domain="[('date_fin','!=',False)]" />
                <filter
                    name="date_mise_a_jour"
                    string="Derni&#232;re mise &#224; jour"
                    domain="[('date_mise_a_jour','!=',False)]"
                />
                <filter name="disponibilite" string="Disponibilit&#233;" domain="[('disponibilite','!=',False)]" />
                <filter name="membre" string="Membre" domain="[('membre','!=',False)]" />
                <filter
                    name="nb_consultation"
                    string="Nombre de consultations"
                    domain="[('nb_consultation','!=',False)]"
                />
                <filter
                    name="nom_offre_special"
                    string="Nom de l'offre sp&#233;ciale"
                    domain="[('nom_offre_special','!=',False)]"
                />
                <filter name="offre_special" string="Offre sp&#233;ciale" domain="[('offre_special','=',True)]" />
                <filter name="organization" string="Organization" domain="[('organization','!=',False)]" />
                <filter name="tarif" string="Tarif" domain="[('tarif','!=',False)]" />
                <filter name="type_service_id" string="Type de services" domain="[('type_service_id','!=',False)]" />
            </search>
        </field>
    </record>

