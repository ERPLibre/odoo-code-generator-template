<?xml version= "1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="demo_website_leaflet_category_view_form">
    <field name="name">demo_website_leaflet_category_form</field>
    <field name="model">demo.website_leaflet.category</field>
    <field name="arch" type="xml">
      <form string="Titre">
        <sheet>
          <group>
            <field name="active"/>
          </group>
          <group>
            <field name="company_id"/>
          </group>
          <group>
            <field name="description"/>
          </group>
          <group>
            <field name="name"/>
          </group>
          <group>
            <field name="parent"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="demo_website_leaflet_category_view_tree">
    <field name="name">demo_website_leaflet_category_tree</field>
    <field name="model">demo.website_leaflet.category</field>
    <field name="arch" type="xml">
      <tree>
        <field name="active"/>
        <field name="company_id"/>
        <field name="description"/>
        <field name="name"/>
        <field name="parent"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="demo_website_leaflet_category_demo_website_leaflet_c_action_window">
    <field name="name">demo_website_leaflet_category_action_view</field>
    <field name="res_model">demo.website_leaflet.category</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>