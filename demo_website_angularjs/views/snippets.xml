<odoo>
    <!-- Snippets -->
    <template id="s_demo_website_angularjs" name="Demo Website Angularjs">
        <section class="o_demo_website_angularjs" ng-controller="AngularJSController">
            <div class="container" >
                <div class="oe_structure demo_website_angularjs_value">Loading snippet AngularJS demo, save the page.</div>
                <div class="oe_structure ng-cloak">
                    <div style="color:red;" ng-if="!_.isEmpty(error)">
                        {{error}}
                    </div>
                    <div ng-if="_.isEmpty(error)">
                        <span ng-if="demo.nb_page > -1">
                            Demo show {{demo.nb_page}} website{{demo.nb_page > 0 ? 's' : ''}} page{{demo.nb_page > 0 ? 's' : ''}}.
                        </span>
                        <span ng-if="demo.nb_page &lt;= -1">
                            Loading demo.
                        </span>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="demo_website_angularjs.s_demo_website_angularjs"
                t-thumbnail="/demo_website_angularjs/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/demo_website_angularjs/static/src/js/lib/angular.js" />
            <script type="text/javascript" src="/demo_website_angularjs/static/src/js/lib/angular-sanitize.js" />
            <script
                type="text/javascript"
                src="/demo_website_angularjs/static/src/js/website.demo_website_angularjs.animation.js"
            />
        </xpath>
    </template>
</odoo>
