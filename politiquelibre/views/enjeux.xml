<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="enjeux_view_form" model="ir.ui.view">
        <field name="name">enjeux_form</field>
        <field name="model">enjeux</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="id_electeur" />
                    </group>
                    <group>
                        <field name="nom" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="enjeux_view_graph" model="ir.ui.view">
        <field name="name">enjeux_graph</field>
        <field name="model">enjeux</field>
        <field name="arch" type="xml">
            <graph string="Enjeux">
                <field name="name" type="row" />
                <field name="id_electeur" type="measure" />
                <field name="nom" type="row" />
            </graph>
        </field>
    </record>

    <record id="enjeux_view_kanban" model="ir.ui.view">
        <field name="name">enjeux_kanban</field>
        <field name="model">enjeux</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="id_electeur" />
                <field name="nom" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="id_electeur" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="nom" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="enjeux_view_pivot" model="ir.ui.view">
        <field name="name">enjeux_pivot</field>
        <field name="model">enjeux</field>
        <field name="arch" type="xml">
            <pivot string="Enjeux">
                <field name="name" type="row" />
                <field name="id_electeur" type="measure" />
                <field name="nom" type="row" />
            </pivot>
        </field>
    </record>

    <record id="enjeux_view_search" model="ir.ui.view">
        <field name="name">enjeux_search</field>
        <field name="model">enjeux</field>
        <field name="arch" type="xml">
            <search string="Enjeux">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('id_electeur','!=',False)]" name="id_electeur" string="Id electeur" />
                <filter domain="[('nom','!=',False)]" name="nom" string="Nom" />
            </search>
        </field>
    </record>

    <record id="enjeux_view_tree" model="ir.ui.view">
        <field name="name">enjeux_tree</field>
        <field name="model">enjeux</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="id_electeur" />
                <field name="nom" />
            </tree>
        </field>
    </record>

    <act_window
        id="enjeux_enjeux_action_window"
        name="enjeux"
        res_model="enjeux"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
